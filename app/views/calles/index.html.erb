<p id="notice"><%= notice %></p>

<h1>Listing Calles</h1>

<table>
  <thead>
    <tr>
      <th>Barrio</th>
      <th>Calle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calles.each do |calle| %>
      <tr>
        <td><%= calle.barrio_id %></td>
        <td><%= calle.calle %></td>
        <td><%= link_to 'Show', calle %></td>
        <td><%= link_to 'Edit', edit_calle_path(calle) %></td>
        <td><%= link_to 'Destroy', calle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


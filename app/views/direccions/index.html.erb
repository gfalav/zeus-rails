<p id="notice"><%= notice %></p>

<h1>Listing Direccions</h1>

<table>
  <thead>
    <tr>
      <th>Calle</th>
      <th>Nro</th>
      <th>Pdepto</th>
      <th>Acceso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @direccions.each do |direccion| %>
      <tr>
        <td><%= direccion.calle_id %></td>
        <td><%= direccion.nro %></td>
        <td><%= direccion.pdepto %></td>
        <td><%= direccion.acceso %></td>
        <td><%= link_to 'Show', direccion %></td>
        <td><%= link_to 'Edit', edit_direccion_path(direccion) %></td>
        <td><%= link_to 'Destroy', direccion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

